@using Model
@model RespondAndDataList<ExtractionDto>
@{
    ViewBag.Title = "Добычи";
}

<h2>Добычи</h2>

@if (Model.Respond.Succeded)
{
    if (Model.Data.Any())
    {
        var number = 1;
        <div>
            <table class="table table-striped" style="max-width:500px">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col" class="col-md-3">Значение</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var extraction in Model.Data)
                    {
                        <tr id="@extraction.ID">
                            <td>@number</td>
                            <td>@extraction.Значение</td>
                        </tr>
                        number++;
                    }
                </tbody>
            </table>
        </div>

        <br />
    }
    else
    {
        <span>Добычи не найдены</span>
    }
}
else
{
    <span>При обработке запроса произошла ошибка.</span>
    <span>@Model.Respond.ErrorMessage</span>
}